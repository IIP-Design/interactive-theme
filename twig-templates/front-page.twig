{% extends "base.twig" %}

{% block content %}
  <section class="hero hero--bg_img" data-responsive-background-image>    
    <img src="{{ header_url }}"
      sizes="{{ sizes }}"
      srcset="{{ srcset }}">
    <div class="hero-inner bottom_padd bottom_padd--thick_home">
      <div class="hero-content ui container">
        <h1 class="hero-h1">Interactive Hub</h1> 
        <p>Interactive is a global outreach team that works to connect the world through engaging web chats.</p>       
      </div>
    </div>
  </section>
  <section class="ui container title-overlay">     
    <div class='inner-container'>           
      <div class='home'>
        <section class='home_main'>          
          {{ page_data.content.rendered }}          
        </section>
      </div>
    </div>
  </section>
  <section class='home_resources'>
    <h2>Resources</h2>
      <div class='home_resources array'>
        <div class='home_resources array_item'>
            <img class="home_resources array_image" src="https://placeimg.com/250/250/tech" alt="Image">
            <h3 class='home_resources array_text'>Platforms + Equipment Recommendations</h3>
        </div>
        <div class='home_resources array_item'>
            <img class="home_resources array_image" src="https://placeimg.com/250/250/nature" alt="Image">
            <h3 class='home_resources array_text'>Video Conferencing Tips</h3>
        </div>
        <div class='home_resources array_item'>
            <img class="home_resources array_image" src="https://placeimg.com/250/250/animals" alt="Image">
            <h3 class='home_resources array_text'>Viewing Group Tips</h3>
        </div>
      </div>
  </section>
  <section class='home_contact'>
    <div class='home_contact feedback'>
      <h3 class='home_contact header'>Questions or Feedback?</h3>
      <p class='home_contact join'>Get in Touch!</p>
    </div>
  </section>
{% endblock %}